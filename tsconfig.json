{
	"compilerOptions": {
		"outDir": "dist",
		"module": "CommonJS",
		"target": "ESNext",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"moduleResolution": "Node",
		"sourceMap": false,
		"declaration": false,
		"strict": false,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": true,
		"jsx": "react"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"*.js"
	]
}
